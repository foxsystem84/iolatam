            <div class="CompanyLogoList__container">
                {
                logos.map(logo =>(
                    <div class="CompanyLogo CompanyLogoList__logo">
                      <div>
                          <span style="box-sizing:border-box;display:inline-block;overflow:hidden;width:150px;height:36px;background:none;opacity:1;border:0;margin:0;padding:0;position:relative">                       
                            
