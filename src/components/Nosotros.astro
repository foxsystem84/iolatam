<script>
    window.addEventListener('scroll', function() {
        //const container = document.querySelector(".section") as HTMLDivElement
        const image = document.querySelector('.image') as HTMLImageElement; 
       
        if(window.scrollY > 800 ){ 
            let scroll = window.scrollY - 800;
            let translateY = -30 + (scroll / (document.documentElement.scrollHeight - window.innerHeight -800)) * 120; 
            let scale = 1.3 - (scroll / (document.documentElement.scrollHeight - window.innerHeight - 800)) * 0.5; 
            image.style.transform = 'translate3d(0px, ' + translateY + '%, 0px) scale3d(' + scale + ', ' + scale + ', 1)';

        }
          
});
  </script>
  
