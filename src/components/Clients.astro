                {
                logos.map(logo =>(
                    <div class="CompanyLogo CompanyLogoList__logo">
                      <div>
                          <span style="box-sizing:border-box;display:inline-block;overflow:hidden;width:150px;height:36px;background:none;opacity:1;border:0;margin:0;padding:0;position:relative">                       
                            
                            <Image class="object-containpng w-full h-full " src={`/logo-company/${logo.image}`} alt={logo.alt} width={100} height={100} />
                          </span>
                      </div>
                    </div>
                ))
                }                      
            </div>
    
           
        </div>
    </div>
</section>



<style>
    

  .CompanyLogo {
 display:block
}
.CompanyLogoList {
 background-color:initial;
 margin:auto auto ;
 overflow:hidden;
 padding:2.5rem 0;
 position:relative;
 width:100%
}
.CompanyLogoList:after,
.CompanyLogoList:before {
 background:linear-gradient(90deg,#171717,rgba(19,22,28,0));
 content:"";
 height:112px;
 position:absolute;
 width:200px;
 z-index:2
}
.CompanyLogoList:after {
 right:0;
 top:0;
 -webkit-transform:rotate(180deg);
 transform:rotate(180deg)
}
.CompanyLogoList:before {
 left:0;
 top:0
}
.CompanyLogoList__slider {
 height:50px;
 max-height:50px
}
.CompanyLogoList__container,
.CompanyLogoList__slider {
 align-items:center;
 display:flex;
 gap:64px;
 justify-content: space-between;
}
.CompanyLogoList__container {
 -webkit-animation:slide calc(var(--companies)*4s) linear infinite;
 animation:slide calc(var(--companies)*4s) linear infinite
}
.CompanyLogoList__logo {
 padding:0
}
@-webkit-keyframes slide {
 0% {
  -webkit-transform:translateX(0);
  transform:translateX(0)
 }
 to {
  -webkit-transform:translateX(calc(-100% - 64px));
  transform:translateX(calc(-100% - 64px))
 }
}
@keyframes slide {
 0% {
  -webkit-transform:translateX(0);
  transform:translateX(0)
 }
 to {
  -webkit-transform:translateX(calc(-100% - 64px));
  transform:translateX(calc(-100% - 64px))
 }
}
</style>